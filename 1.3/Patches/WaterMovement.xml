<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>SwimmingKit</li>
			<li>Biomes! Islands</li>
		</mods> 
				
		<match Class="PatchOperationSequence">
			<operations>
	
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/AlienRace.ThingDef_AlienRace[defName="ESCP_MaormerRace" or defName="ESCP_ReefViper"]/statBases</xpath>
					<value>
						<SwimSpeed>4</SwimSpeed>
					</value>
				</li>

				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/HediffDef[defName="ESCP_MaormerLeviathanHediff"]/stages/li[2]/statOffsets</xpath>
					<value>
						<SwimSpeed>2.5</SwimSpeed>
					</value>
				</li>
				
				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/HediffDef[defName="ESCP_MaormerLeviathanHediff_New"]/stages/li/statOffsets</xpath>
					<value>
						<SwimSpeed>2.5</SwimSpeed>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
	
</Patch>

